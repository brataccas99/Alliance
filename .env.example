# Environment variables example
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=5000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/alliance

# Application Settings
CACHE_TTL_MINUTES=30

# Email Notifications (SMTP)
# Set EMAIL_NOTIFICATIONS_ENABLED=true to send emails after each fetch when new announcements appear.
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=no-reply@example.com
EMAIL_REPLY_TO=
EMAIL_SUBJECT_PREFIX=[Alliance] 

# Public base URL used to generate unsubscribe links in emails
APP_BASE_URL=http://localhost:5000

# Optional: persist JSON files in GCS (recommended for Cloud Run)
GCS_BUCKET=
GCS_PREFIX=data/
